<h2>Songs in <%= @playlist.title %></h2>
<div class="text-center">
<%= link_to 'New Song', new_playlist_song_path(@playlist) %> |
<%= link_to 'Back', playlist_path(@playlist) %>
</div>
<br>

<div class="row">
  <div class="large-centered columns">

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Album</th>
      <th>Duration</th>
      <th>Genre</th>
      <!-- <th>Playlist</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= song.album %></td>
        <td><%= song.duration %></td>
        <td><%= song.genre %></td>
        <!-- <td>
          <% if song.playlist %>
            <%= song.playlist.title %>
          <% else %>
            No Playlist 
          <% end %>
        </td> -->
        <td><%= link_to 'Play', playlist_song_path(@playlist, song) %></td>
        <td><%= link_to 'Edit', edit_playlist_song_path(@playlist, song) %></td>
        <td><%= link_to 'Delete', playlist_song_path(@playlist, song), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>

<br>
<br>
