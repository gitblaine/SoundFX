<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @playlist.title %>
</p>

<% if @playlist.songs.empty? %>
No Songs!

<% else %>
	<% @playlist.songs.each do |song| %>
		Title: <%= song.title %><br />
	<% end %>
<% end %>

<div class="row">
  <ul id="soundcloud-results-pl">
    
  </ul>
</div>

<ol id="hidden" style="display: none;">
	<% @playlist.songs.each do |song| %>
		<li class="url">
			<input type="text" value = <%= song.soundcloud_permalink %> >
		</li>
	<% end %>
</ol>

<%= link_to "View Songs", playlist_songs_path(@playlist) %> |
<%= link_to "Add Songs", new_playlist_song_path(@playlist) %> |
<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>
