<h2>Your Playlists</h2>

<p> Create or Edit a Playlist to Add Songs from SoundCloud</p>

<br>
<div class="row">
  <div class="small-3 large-centered columns">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.title %></td>
        <td><%= link_to 'Play', playlist %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <td><%= link_to 'Delete', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br></br>
  <div class = "text-center">
    <a href="playlists/new" class="button [small small small]" >New Playlist</a>
  </div>
</div>
</div>
</div>

